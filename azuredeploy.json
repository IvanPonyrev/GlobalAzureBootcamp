{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "_deploymentsLocationSasToken": {
            "type": "securestring"
        },
        "_resourcesLocationSasToken": {
            "type": "securestring"
        },
        "_paramsLocationSasToken": {
            "type": "securestring"
        },
        "userObjectId": {
            "type": "string"
        }
    },
    "variables": {
      "deployments": {
        "apiVersion": "[providers('Microsoft.Resources', 'deployments').apiVersions[0]]"
      }
    },
    "resources": [
        {
          "type": "Microsoft.Resources/deployments",
          "apiVersion": "[variables('deployments').apiVersion]",
          "name": "vaults",
          "resourceGroup": "vaults",
          "properties": {
            "mode": "Incremental",
            "templateLink": {
              "uri": "[concat(reference(resourceId(resourceGroup().name, 'Microsoft.Resources/deployments', 'storageAccounts'), variables('deployments').apiVersion).outputs.blobEndpoint.value[0], 'resources/vaults.json', parameters('_resourcesLocationSasToken'))]"
            },
            "parameters": {
                "name": {
                    "value": "[concat('vault', uniqueString(subscription().subscriptionId))]"
                },
                "sku": {
                    "value": {
                        "name": "Standard",
                        "family": "A"
                    }
                },
                "accessPolicies": {
                    "value": [
                        {
                            "tenantId": "[subscription().tenantId]",
                            "objectId": "[parameters('userObjectId')]",
                            "permissions": {
                                "keys": [
                                    "all"
                                ],
                                "secrets": [
                                    "all"
                                ],
                                "certificates": [
                                    "all"
                                ],
                                "storage": [
                                    "all"
                                ]
                            }
                        }
                    ]
                }
            },
            "debugSetting": {
              "detailLevel": "requestContent, responseContent"
            }
          }   
        },        
        {
          "type": "Microsoft.Resources/deployments",
          "apiVersion": "[variables('deployments').apiVersion]",
          "name": "networkDeployment",
          "resourceGroup": "network",
          "properties": {
            "mode": "Incremental",
            "templateLink": {
              "uri": "[concat(reference(resourceId(resourceGroup().name, 'Microsoft.Resources/deployments', 'storageAccounts'), variables('deployments').apiVersion).outputs.blobEndpoint.value[0], 'deployments/networkdeploy.json', parameters('_deploymentsLocationSasToken'))]"
            },
            "parameters": {
              "_resourcesLocationSasToken": {
                  "value": "[parameters('_resourcesLocationSasToken')]"
              },
              "_paramsLocationSasToken": {
                  "value": "[parameters('_paramsLocationSasToken')]"
              },
              "blobEndpoint": {
                  "value": "[reference(resourceId(resourceGroup().name, 'Microsoft.Resources/deployments', 'storageAccounts'), variables('deployments').apiVersion).outputs.blobEndpoint.value[0]]"
              }
            },
            "debugSetting": {
              "detailLevel": "requestContent, responseContent"
            }
          }   
        }
    ],
    "outputs": {
      "apiVersion": {
        "type": "string",
        "value": "[variables('deployments').apiVersion]"
      }
    }
}
  