{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "_deploymentsLocationSasToken": {
            "type": "securestring",
            "defaultValue": null
        },
        "_resourcesLocationSasToken": {
            "type": "securestring",
            "defaultValue": null
        },
        "_paramsLocationSasToken": {
            "type": "securestring",
            "defaultValue": null
        },
        "userObjectId": {
            "type": "securestring"
        }
    },
    "variables": {
        "deployments": {
            "apiVersion": "[providers('Microsoft.Resources', 'deployments').apiVersions[0]]"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('deployments').apiVersion]",
            "name": "vaults",
            "resourceGroup": "vaults",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(reference(resourceId(resourceGroup().name, 'Microsoft.Resources/deployments', 'storageAccounts'), variables('deployments').apiVersion).outputs.blobEndpoint.value, 'resources/vaults.json', parameters('_resourcesLocationSasToken'))]"
                },
                "parameters": {
                    "name": {
                        "value": "[concat('vault', uniqueString(subscription().subscriptionId))]"
                    },
                    "accessPolicies": {
                        "value": [
                            {
                                "tenantId": "[subscription().tenantId]",
                                "objectId": "[parameters('userObjectId')]",
                                "permissions": {
                                    "keys": [
                                        "all"
                                    ],
                                    "secrets": [
                                        "all"
                                    ],
                                    "certificates": [
                                        "all"
                                    ],
                                    "storage": [
                                        "all"
                                    ]
                                }
                            }
                        ]
                    }
                },
                "debugSetting": {
                    "detailLevel": "requestContent, responseContent"
                }
            }
        }
    ],
    "outputs": {
        "apiVersion": {
            "type": "string",
            "value": "[variables('deployments').apiVersion]"
        }
    }
}