{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "_resourcesLocationSasToken": {
            "type": "securestring"
        },
        "_paramsLocationSasToken": {
            "type": "securestring"
        },
        "blobEndpoint": {
            "type": "string"
        }
    },
    "variables": {
      "deployments": {
        "apiVersion": "[providers('Microsoft.Resources', 'deployments').apiVersions[0]]"
      }
    },
    "resources": [        
        {
          "type": "Microsoft.Resources/deployments",
          "apiVersion": "[variables('deployments').apiVersion]",
          "name": "networkSecurityGroups",
          "properties": {
            "mode": "Incremental",
            "templateLink": {
              "uri": "[concat(parameters('blobEndpoint'), 'resources/networkSecurityGroups.json', parameters('_resourcesLocationSasToken'))]"
            },
            "parametersLink": {
              "uri": "[concat(parameters('blobEndpoint'), 'params/networkSecurityGroups.parameters.json', parameters('_paramsLocationSasToken'))]"
            },
            "debugSetting": {
              "detailLevel": "requestContent, responseContent"
            }
          }   
        },
        {
          "type": "Microsoft.Resources/deployments",
          "apiVersion": "[variables('deployments').apiVersion]",
          "name": "network",
          "dependsOn": [
              "[resourceId('Microsoft.Resources/deployments', 'networkSecurityGroups')]"
          ],
          "properties": {
            "mode": "Incremental",
            "templateLink": {
              "uri": "[concat(parameters('blobEndpoint'), 'resources/virtualNetworks.json', parameters('_resourcesLocationSasToken'))]"
            },
            "parametersLink": {
              "uri": "[concat(parameters('blobEndpoint'), 'params/virtualNetworks.parameters.json', parameters('_paramsLocationSasToken'))]"
            },
            "debugSetting": {
              "detailLevel": "requestContent, responseContent"
            }
          }   
        },
        {
          "type": "Microsoft.Resources/deployments",
          "apiVersion": "[variables('deployments').apiVersion]",
          "name": "frontendRules",
          "dependsOn": [
              "[resourceId('Microsoft.Resources/deployments', 'networkSecurityGroups')]"
          ],
          "properties": {
            "mode": "Incremental",
            "templateLink": {
              "uri": "[concat(parameters('blobEndpoint'), 'resources/rules.json', parameters('_resourcesLocationSasToken'))]"
            },
            "parameters": {
              "group": {
                  "value": "[reference(resourceId('Microsoft.Resources/deployments', 'networkSecurityGroups'), variables('deployments').apiVersion).outputs.groups.value[0]]"
              },
              "rules": {
                  "value": [
                      {
                          "name": "Allow-Inbound-HTTP-Internet",
                          "properties": {
                            "direction": "Inbound",
                            "access": "Allow",
                            "priority": 100,
                            "sourceAddressPrefix": "Internet",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "80",
                            "protocol": "Tcp"
                          }
                      },
                      {
                          "name": "Allow-Inbound-RDP-Internet",
                          "properties": {
                            "direction": "Inbound",
                            "access": "Allow",
                            "priority": 200,
                            "sourceAddressPrefix": "Internet",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "3389",
                            "protocol": "Tcp"
                          }
                      },
                      {
                          "name": "Deny-Inbound-All",
                          "properties": {
                            "direction": "Inbound",
                            "access": "Deny",
                            "priority": 300,
                            "sourceAddressPrefix": "Internet",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "*",
                            "protocol": "Tcp"
                          }
                      },
                      {
                          "name": "Deny-Internet-All",
                          "properties": {
                            "direction": "Outbound",
                            "access": "Deny",
                            "priority": 100,
                            "sourceAddressPrefix": "*",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "Internet",
                            "destinationPortRange": "*",
                            "protocol": "*"
                        }
                      }
                  ]
              }
            },
            "debugSetting": {
              "detailLevel": "requestContent, responseContent"
            }
          }   
        },
        {
          "type": "Microsoft.Resources/deployments",
          "apiVersion": "[variables('deployments').apiVersion]",
          "name": "backendRules",
          "dependsOn": [
              "[resourceId('Microsoft.Resources/deployments', 'networkSecurityGroups')]"
          ],
          "properties": {
            "mode": "Incremental",
            "templateLink": {
              "uri": "[concat(parameters('blobEndpoint'), 'resources/rules.json', parameters('_resourcesLocationSasToken'))]"
            },
            "parameters": {
              "group": {
                "value": "[reference(resourceId('Microsoft.Resources/deployments', 'networkSecurityGroups'), variables('deployments').apiVersion).outputs.groups.value[1]]"
            },
              "rules": {
                  "value": [
                    {
                        "name": "Deny-Inbound-All",
                        "properties": {
                            "direction": "Inbound",
                            "access": "Deny",
                            "priority": 100,
                            "sourceAddressPrefix": "Internet",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "*",
                            "protocol": "*"
                    }
                    },
                    {
                        "name": "Deny-Internet-All",
                        "properties": {
                            "direction": "Outbound",
                            "access": "Deny",
                            "priority": 100,
                            "sourceAddressPrefix": "*",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "Internet",
                            "destinationPortRange": "*",
                            "protocol": "*"
                        }
                    }
                  ]
              }
            },
            "debugSetting": {
              "detailLevel": "requestContent, responseContent"
            }
          }   
        }
    ],
    "outputs": {
      "apiVersion": {
        "type": "string",
        "value": "[variables('deployments').apiVersion]"
      }
    }
}
  