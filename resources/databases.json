{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "name": {
        "type": "string",
        "metadata": {
          "description": "The name to be given to this web."
        }
      },
      "sqlServerName": {
        "type": "string",
        "metadata": {
          "description": "The name of sql server."
        }
      },
      "apiVersion": {
        "type": "string",
        "metadata": {
          "description": "The apiVersion of this resource. "
        },
        "defaultValue": "[providers('Microsoft.Sql', 'servers').apiVersions[0]]"
      },
      "location": {
        "type": "string",
        "metadata": {
          "description": "Resource location."
        },
        "defaultValue": "[resourceGroup().location]"
      },
      "edition": {
        "type": "string",
        "metadata": {
          "description": ""
        },
        "defaultValue": "Free"
      },
      "collation": {
        "type": "string",
        "metadata": {
          "description": "The collation of the database."
        }
      },
      "maxSizeGB": {
        "type": "string",
        "metadata": {
          "description": ""
        }
      },
      "requestedServiceObjectiveName": {
        "type": "string",
        "metadata": {
          "description": ""
        }
      }
    },
    "variables": {
    },
    "resources": [
      {
        "type": "Microsoft.Sql/servers/databases",
        "apiVersion": "[parameters('apiVersion')]",
        "name": "[concat(parameters('sqlServer'), '/', parameters('name'))]",
        "location": "[parameters('location')]",
        "properties": "[parameters('databases')[copyIndex()].properties]"
      }
    ],
    "outputs": {
      "name": {
        "type": "string",
        "value": "[parameters('name')]"
      },
      "apiVersion": {
        "type": "string",
        "value": "[parameters('apiVersion')]"
      },
      "resourceId": {
        "type": "string",
        "value": "[resourceId('Microsoft.Sql/servers/databases', parameters('sqlServerName'), parameters('name'))]"
      }
    }
  }
  