{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string",
            "metadata": {
                "description": "The name to be given to this automation account."
            }
        },
        "automationAccountName": {
            "type": "string",
            "metadata": {
                "description": "The job name."
            }
        },
        "apiVersion": {
            "type": "string",
            "metadata": {
                "description": "The apiVersion of this resource."
            },
            "defaultValue": "latest"
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Resource location."
            },
            "defaultValue": "eastus2"
        },
        "runbook": {
            "type": "string",
            "metadata": {
                "description": "The name of the runbook this job applies to."
            }
        },
        "jobParameters": {
            "type": "object",
            "metadata": {
                "description": "Parameters of the job."
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Automation/automationAccounts/jobs",
            "apiVersion": "[parameters('apiVersion')]",
            "name": "[concat(parameters('automationAccountName'), '/', parameters('name'))]",
            "location": "[parameters('location')]",
            "properties": {
                "runbook": {
                    "name": "[parameters('runbook')]"
                },
                "parameters": "[parameters('jobParameters')]"
            }
        }
    ],
    "outputs": {
        "name": {
            "type": "string",
            "value": "[parameters('name')]"
        },
        "apiVersion": {
            "type": "string",
            "value": "[parameters('apiVersion')]"
        },
        "resourceId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Automation/automationAccounts/jobs', parameters('automationAccountName'), parameters('name'))]"
        }
    }
}