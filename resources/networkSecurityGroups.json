{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "networkSecurityGroups": {
      "type": "array",
      "metadata": {
        "description": "An array of network security group objects matching schema."
      }
    }
  },
  "variables": {
    "virtualNetworks": {
      "apiVersion": "[providers('Microsoft.Network', 'virtualNetworks').apiVersions[0]]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "[variables('virtualNetworks').apiVersion]",
      "name": "[parameters('networkSecurityGroups')[copyIndex()].name]",
      "location": "[resourceGroup().location]",
      "properties": "[parameters('networkSecurityGroups')[copyIndex()].properties]",
      "copy": {
        "name": "networkSecurityGroups",
        "count": "[length(parameters('networkSecurityGroups'))]"
      }
    }
  ],
  "outputs": {
    "groups": {
      "type": "array",
      "value": [
        {
          "name": "[parameters('networkSecurityGroups')[0].name]",
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroups')[0].name)]"
        },
        {
          "name": "[parameters('networkSecurityGroups')[1].name]",
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroups')[1].name)]"
        }
        
        
      ]
    }
  }
}
