{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "securityRules": {
      "type": "array",
      "metadata": {
        "description": "An array of network security rules objects matching schema."
      }
    }
  },
  "variables": {
    "networkSecurityGroups": {
      "apiVersion": "[providers('Microsoft.Network', 'networkSecurityGroups').apiVersions[0]]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkSecurityGroups/securityRules",
      "apiVersion": "[variables('networkSecurityGroups').apiVersion]",
      "name": "[concat(reference(resourceId(resourceGroup().name, 'Microsoft.Resources/deployments', 'networkSecurityGroups'), providers('Microsoft.Resources', 'deployments').apiVersions[0]).outputs.groups.value[0], '/', parameters('securityRules')[0].name)]",
      "location": "[resourceGroup().location]",
      "properties": "[parameters('securityRules')[0].properties]"
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups/securityRules",
      "apiVersion": "[variables('networkSecurityGroups').apiVersion]",
      "name": "[concat(reference(resourceId(resourceGroup().name, 'Microsoft.Resources/deployments', 'networkSecurityGroups'), providers('Microsoft.Resources', 'deployments').apiVersions[0]).outputs.groups.value[0], '/', parameters('securityRules')[copyIndex(1)].name)]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkSecurityGroups/securityRules', parameters('securityRules')[copyIndex()].networkSecurityGroup, parameters('securityRules')[copyIndex()].name)]"
      ],
      "properties": "[parameters('securityRules')[copyIndex(1)].properties]",
      "copy": {
        "name": "securityRules",
        "count": "[sub(length(parameters('securityRules')), 1)]"
      }
    }
  ],
  "outputs": {
  }
}
