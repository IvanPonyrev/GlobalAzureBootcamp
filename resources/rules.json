{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "group": {
      "type": "string",
      "metadata": {
        "description": "The network security group name to which rules will be applied."
      }
    },
    "rules": {
      "type": "array",
      "metadata": {
        "description": "An array of network security rules objects matching schema."
      }
    }
  },
  "variables": {
    "networkSecurityGroups": {
      "apiVersion": "[providers('Microsoft.Network', 'networkSecurityGroups').apiVersions[0]]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkSecurityGroups/securityRules",
      "apiVersion": "[variables('networkSecurityGroups').apiVersion]",
      "name": "[concat(parameters('group'), '/', parameters('rules')[0].name)]",
      "location": "[resourceGroup().location]",
      "properties": "[parameters('rules')[0].properties]"
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups/securityRules",
      "apiVersion": "[variables('networkSecurityGroups').apiVersion]",
      "name": "[concat(parameters('group'), '/', parameters('rules')[copyIndex(1)].name)]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkSecurityGroups/securityRules', parameters('group'), parameters('rules')[copyIndex()].name)]"
      ],
      "properties": "[parameters('rules')[copyIndex(1)].properties]",
      "copy": {
        "name": "rules",
        "count": "[sub(length(parameters('rules')), 1)]"
      }
    }
  ],
  "outputs": {
    "finalDependency": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/networkSecurityGroups/securityRules', parameters('group'), parameters('rules')[sub(length(parameters('rules')), 1)].name)]"
    }
  }
}
