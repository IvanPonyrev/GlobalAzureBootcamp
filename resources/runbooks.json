{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string",
            "metadata": {
                "description": "The name to be given to this runbook."
            }
        },
        "automationAccountName": {
            "type": "string",
            "metadata": {
                "description": "The name to be given to this automation account."
            }
        },
        "apiVersion": {
            "type": "string",
            "metadata": {
                "description": "The apiVersion of this resource."
            },
            "defaultValue": "[providers('Microsoft.Automation', 'automationAccounts').apiVersions[0]]"
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Resource location."
            },
            "defaultValue": "eastus2"
        },
        "logVerbose": {
            "type": "bool",
            "metadata": {
                "description": "Sets verbose log option."
            },
            "defaultValue": false
        },
        "logProgress": {
            "type": "bool",
            "metadata": {
                "description": "Sets verbose log option."
            },
            "defaultValue": false
        },
        "runbookType": {
            "type": "string",
            "metadata": {
                "description": "Sets the type of runbook."
            },
            "defaultValue": "PowerShellWorkflow",
            "allowedValues": [
                "Script",
                "Graph",
                "PowerShellWorkflow",
                "PowerShell", 
                "GraphPowerShellWorkflow", 
                "GraphPowerShell"
            ]
        },
        "uri": {
            "type": "string",
            "metadata": {
                "description": "Sets the uri of the runbook content."
            }
        },
        "description": {
            "type": "string", 
            "metadata": {
                "description": "Sets the description of the runbook."
            },
            "defaultValue": ""
        }
    },
    "variables": {
    },
    "resources": [
        {
            "type": "Microsoft.Automation/automationAccounts/runbooks",
            "apiVersion": "[parameters('apiVersion')]",
            "name": "[concat(parameters('automationAccountName'), '/', parameters('name'))]",
            "location": "[parameters('location')]",
            "properties": {
                "logVerbose": "[parameters('logVerbose')]",
                "logProgress": "[parameters('logProgress')]",
                "runbookType": "[parameters('runbookType')]",
                "publishContentLink": {
                    "uri": "[parameters('uri')]"
                },
                "description": "[parameters('description')]"
            }
        }
    ],
    "outputs": {
        "name": {
            "type": "string",
            "value": "[parameters('name')]"
        },
        "apiVersion": {
            "type": "string",
            "value": "[parameters('apiVersion')]"
        },
        "resourceId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Automation/automationAccounts/runbooks', parameters('automationAccountName'), parameters('name'))]"
        }
    }
}