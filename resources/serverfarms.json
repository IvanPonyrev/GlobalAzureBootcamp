{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "serverfarmName": {
      "type": "string",
      "metadata": {
        "description": "The name of the resource."
      }
    },
    "apiVersion": {
      "type": "string",
      "metadata": {
        "description": "The apiVersion of this resource. "
      },
      "defaultValue": "[providers('Microsoft.Web', 'serverfarms').apiVersions[0]]"
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Resource location."
      },
      "defaultValue": "[resourceGroup().location]"
    },
    "kind": {
      "type": "string",
      "metadata": {
        "description": "Kind of app service."
      },
      "allowedValues": [
        "functionapp", "app"
      ],
      "defaultValue": "app"
    },
    "sku": {
      "type": "string", 
      "metadata": {
        "description": "The name of the SKU."
      },
      "defaultValue": "D1"
    },
    "tier": {
      "type": "string", 
      "metadata": {
        "description": "The name of the SKU."
      },
      "defaultValue": "Free"
    },
    "capacity": {
      "type": "int", 
      "metadata": {
        "description": "Current number of instances assigned to the resource."
      },
      "defaultValue": 0
    }
  },
  "variables": {
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "[parameters('apiVersion')]",
      "name": "[parameters('serverfarmName')]",
      "location": "[parameters('location')]",
      "properties": {
        "name": "[parameters('serverfarmName')]"
      },
      "sku": {
        "name": "[parameters('sku')]",
        "tier": "[parameters('tier')]",
        "capacity": "[parameters('capacity')]"
      }
    }
  ],
  "outputs": {
    "name": {
      "type": "string",
      "value": "[parameters('serverfarmName')]"
    },
    "apiVersion": {
      "type": "string",
      "value": "[parameters('apiVersion')]"
    },
    "resourceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Web/serverfarms', parameters('serverfarmName'))]"
    }
  }
}
