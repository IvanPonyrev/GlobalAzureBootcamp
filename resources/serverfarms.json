{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string",
      "metadata": {
        "description": "The name of the resource."
      }
    },
    "apiVersion": {
      "type": "string",
      "metadata": {
        "description": "The apiVersion of this resource. "
      },
      "defaultValue": "[providers('Microsoft.Web', 'serverfarms').apiVersions[0]]"
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Resource location."
      },
      "defaultValue": "[resourceGroup().location]"
    },
    "sku": {
      "type": "string", 
      "metadata": {
        "description": "The name of the SKU."
      }
    },
    "capacity": {
      "type": "integer", 
      "metadata": {
        "description": "Current number of instances assigned to the resource."
      }
    },
    "appServicePlan": {
      "type": "string", 
      "metadata": {
        "description": "The name for the app service plan."
      }
    }
  },
  "variables": {
    "serverfarms": {
      "apiVersion": "[providers('Microsoft.Web', 'serverfarms').apiVersions[0]]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "[variables('serverfarms').apiVersion]",
      "name": "[parameters('serverfarms')[copyIndex()].name]",
      "location": "[resourceGroup().location]",
      "properties": {
        "name": "[parameters('appServicePlan')]"
      },
      "sku": {
        "name": "[parameters('sku')]",
        "capacity": "[parameters('capacity')]"
      }
    }
  ],
  "outputs": {
    "name": {
      "type": "string",
      "value": "[parameters('name')]"
    },
    "apiVersion": {
      "type": "string",
      "value": "[parameters('apiVersion')]"
    },
    "resourceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Web/sites', parameters('name'))]"
    }
  }
}
