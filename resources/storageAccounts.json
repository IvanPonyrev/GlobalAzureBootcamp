{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "name": {
        "type": "string",
        "metadata": {
          "description": "The name of the resource."
        },
        "defaultValue": "storage"
      },
      "apiVersion": {
        "type": "string",
        "metadata": {
          "description": "The desired apiVersion of this resource. Default is latest."
        },
        "defaultValue": "latest"
      },
      "storageAccount": {
        "type": "object",
        "metadata": {
          "description": "A storageAccount object containing sku, kind, and properties."
        }
      }
    },
    "variables": {
      "storageAccounts": {
        "apiVersion": "[if(equals(parameters('apiVersion'), 'latest'), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0], parameters('apiVersion'))]",
        "name": "[concat(parameters('name'), uniqueString(subscription().displayName))]"
      }
    },
    "resources": [
      {
        "type": "Microsoft.Storage/storageAccounts",
        "apiVersion": "[variables('storageAccounts').apiVersion]",
        "name": "[variables('storageAccounts').name]",
        "location": "[resourceGroup().location]",
        "sku": {
          "name": "[parameters('storageAccount').sku.name]"
        },
        "kind": "[parameters('storageAccount').kind]",
        "properties": "[parameters('storageAccount').properties]"
      }
    ],
    "outputs": {
      "apiVersion": {
        "type": "string",
        "value": "[variables('storageAccounts').apiVersion]"
      },
      "blobEndpoint": {
        "type": "array",
        "value": [
          "[reference(variables('storageAccounts').name, variables('storageAccounts').apiVersion).primaryEndpoints.blob]"
        ]
      },
      "resourceId": {
        "type": "string",
        "value": "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccounts').name)]"
      }
    }
}
  