{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "name": {
        "type": "string",
        "metadata": {
          "description": "The name of the resource."
        },
        "defaultValue": "vault"
      },
      "apiVersion": {
        "type": "string",
        "metadata": {
          "description": "The desired apiVersion of this resource. Default is latest."
        },
        "defaultValue": "latest"
      },
      "sku": {
        "type": "object",
        "metadata": {
          "description": "The sku family and name of this vault."
        }
      },
      "accessPolicies": {
        "type": "array",
        "metadata": {
          "description": "The access policies to be applied to this vault."
        }
      }
    },
    "variables": {
      "vaults": {
        "apiVersion": "[if(equals(parameters('apiVersion'), 'latest'), providers('Microsoft.KeyVault', 'vaults').apiVersions[0], parameters('apiVersion'))]",
      }
    },
    "resources": [
      {
        "type": "Microsoft.KeyVault/vaults",
        "apiVersion": "[variables('vaults').apiVersion]",
        "name": "[parameters('name')]",
        "location": "[resourceGroup().location]",
        "properties": {
          "sku": "[parameters('sku')]",
          "tenantId": "[subscription().tenantId]",
          "enabledForDeployment": true,
          "enabledForDiskEncryption": true,
          "enabledForTemplateDeployment": true,
          "copy": [
            {
              "name": "accessPolicies",
              "count": "[length(parameters('accessPolicies'))]",
              "input": 
              {
                  "tenantId": "[parameters('accessPolicies')[copyIndex('accessPolicies')].tenantId]",
                  "objectId": "[parameters('accessPolicies')[copyIndex('accessPolicies')].objectId]",
                  "permissions": "[parameters('accessPolicies')[copyIndex('accessPolicies')].permissions]"
              }
            }
          ]
        }
      }
    ],
    "outputs": {
      "name": {
        "type": "string",
        "value": "[parameters('name')]"
      },
      "resourceId": {
        "type": "string",
        "value": "[resourceId('Microsoft.KeyVault/vaults', parameters('name'))]"
      },
      "vaultUri": {
        "type": "string",
        "value": "[reference(parameters('name'), variables('vaults').apiVersion).vaultUri]"
      }
    }
  }
  